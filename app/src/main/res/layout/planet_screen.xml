<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    android:orientation="vertical">

    <TableLayout
        android:id="@+id/tableLayout"
        android:layout_width="266dp"
        android:layout_height="644dp"
        android:layout_marginStart="184dp"
        android:layout_marginEnd="100dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.494">

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/oxygen"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Oxygen:"
                android:textColor="#00BCD4"
                android:textSize="50px"
                tools:layout_editor_absoluteX="154dp"
                tools:layout_editor_absoluteY="21dp" />

            <TextView
                android:id="@+id/oxygenNumber"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="20%"
                android:textColor="#00BCD4"
                android:textSize="50px" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/carbonDioxide"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Carbon Dioxide:"
                android:textColor="#00BCD4"
                android:textSize="50px" />

            <TextView
                android:id="@+id/carbonDioxideNumber"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="10%"
                android:textColor="#00BCD4"
                android:textSize="50px" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/temp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Temperature"
                android:textColor="#00BCD4"
                android:textSize="50px" />

            <TextView
                android:id="@+id/tempNumber"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="-124 C"
                android:textColor="#00BCD4"
                android:textSize="50px" />
        </TableRow>

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="30dp">

            <TextView
                android:id="@+id/water"
                android:layout_width="117dp"
                android:layout_height="match_parent"
                android:text="Water"
                android:textColor="#00BCD4"
                android:textSize="50px" />

            <TextView
                android:id="@+id/WaterNumber"
                android:layout_width="132dp"
                android:layout_height="match_parent"
                android:text="17.27%"
                android:textColor="#00BCD4"
                android:textSize="50px" />
        </TableRow>
    </TableLayout>

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="236dp"
        android:layout_height="235dp"
        android:layout_marginTop="52dp"
        android:layout_marginBottom="164dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/tableLayout"
        app:layout_constraintHorizontal_bias="0.019"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tableLayout"
        app:layout_constraintVertical_bias="0.945"
        app:srcCompat="@drawable/planetearthrevisedone" />

    <Button
        android:id="@+id/button5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="72dp"
        android:layout_marginTop="227dp"
        android:text="Decrease distance by rocket"
        app:layout_constraintEnd_toStartOf="@+id/tableLayout"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/button9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="72dp"
        android:layout_marginTop="176dp"
        android:text="Increase Distance by rocket"
        app:layout_constraintEnd_toStartOf="@+id/tableLayout"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/button6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="72dp"
        android:text="Add Carbon Dioxide ice"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button5" />

    <Button
        android:id="@+id/button7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="72dp"
        android:text="Add Plant"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button6" />

</androidx.constraintlayout.widget.ConstraintLayout>